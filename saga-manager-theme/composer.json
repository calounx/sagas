{
    "name": "saga-manager/theme",
    "description": "WordPress theme for managing complex fictional universes and sagas",
    "type": "wordpress-theme",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Saga Manager Team",
            "email": "team@sagamanager.com"
        }
    ],
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "yoast/phpunit-polyfills": "^2.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.8",
        "wp-coding-standards/wpcs": "^3.0",
        "mockery/mockery": "^1.6",
        "fakerphp/faker": "^1.23"
    },
    "autoload": {
        "psr-4": {
            "SagaManager\\": "inc/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SagaManager\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "@test:unit",
            "@test:integration"
        ],
        "test:unit": "phpunit --testsuite=unit",
        "test:integration": "phpunit --testsuite=integration",
        "test:all": "phpunit --testsuite=all",
        "test:coverage": "XDEBUG_MODE=coverage phpunit --coverage-html tests/results/coverage-html",
        "lint": "phpcs --standard=WordPress inc/",
        "lint:fix": "phpcbf --standard=WordPress inc/",
        "analyse": "phpstan analyse inc/ --level=5",
        "setup:tests": "bash bin/install-wp-tests.sh wordpress_test wordpress wordpress db latest"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
