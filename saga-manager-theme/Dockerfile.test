FROM wordpress:php8.2-apache

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    unzip \
    wget \
    subversion \
    default-mysql-client \
    && rm -rf /var/lib/apt/lists/*

# Install PHP extensions
RUN docker-php-ext-install \
    pdo_mysql \
    mysqli

# Install Xdebug for code coverage
RUN pecl install xdebug-3.3.0 \
    && docker-php-ext-enable xdebug

# Configure Xdebug for coverage
RUN echo "xdebug.mode=coverage" >> /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini \
    && echo "xdebug.start_with_request=yes" >> /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini

# Install Composer
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

# Install WP-CLI
RUN curl -O https://raw.githubusercontent.com/wp-cli/builds/gh-pages/phar/wp-cli.phar \
    && chmod +x wp-cli.phar \
    && mv wp-cli.phar /usr/local/bin/wp

# Create working directories
RUN mkdir -p /tmp/wordpress-tests-lib /tmp/wordpress

# Set PHP memory limit for tests
RUN echo "memory_limit=512M" > /usr/local/etc/php/conf.d/memory.ini

# Set up Apache for WordPress
RUN a2enmod rewrite

WORKDIR /var/www/html

# Install WordPress Test Suite (will be run on container start)
COPY bin/install-wp-tests.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/install-wp-tests.sh
