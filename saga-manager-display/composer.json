{
    "name": "saga-manager/saga-manager-display",
    "description": "Frontend display components for Saga Manager - shortcodes, Gutenberg blocks, and widgets",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Saga Manager Team",
            "homepage": "https://github.com/saga-manager"
        }
    ],
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10",
        "php-stubs/wordpress-stubs": "^6.0",
        "yoast/phpunit-polyfills": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "SagaManagerDisplay\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SagaManagerDisplay\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite=Unit",
        "test:integration": "phpunit --testsuite=Integration",
        "cs": "phpcs --standard=WordPress src/",
        "cs:fix": "phpcbf --standard=WordPress src/",
        "stan": "phpstan analyse --memory-limit=256M"
    },
    "extra": {
        "wordpress-plugin": true
    }
}
